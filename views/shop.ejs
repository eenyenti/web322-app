<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <!-- Latest compiled and minified Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
        <link rel="stylesheet" href="public/css/main.css" />

        <title>Shop</title>
    </head>
    <body>
        <%- include('partials/header') %>

        <div class="container mt-4" style="padding-top: 45px;">
            <div class="row">
                <!-- Sidebar -->
                <aside class="col-md-3">
                    <h4>Categories</h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <a href="/shop">All Items</a>
                        </li>
                        <% categories.forEach(category => { %>
                            <li class="list-group-item">
                                <a href="/shop?category=<%= category.id %>"><%= category.category %></a>
                            </li>
                        <% }); %>
                    </ul>
                </aside>
        
                <!-- Main Content -->
                <section class="col-md-9">
                    <h2>Shop Items</h2>
                    <% if (items.length > 0) { %>
                        <div class="row">
                            <% items.forEach(item => { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card">
                                        <% if (item.featureImage) { %>
                                            <img src="<%= item.featureImage %>" class="card-img-top" alt="Item Image">
                                        <% } %>
                                        <div class="card-body">
                                            <h5 class="card-title"><%= item.title %></h5>
                                            <p class="card-text"><strong>Price:</strong> $<%= item.price %></p>
                                            <p class="card-text"><strong>Category:</strong> <%= item.category %></p>
                                            <p class="card-text"><strong>Date:</strong> <%= item.postDate %></p>
                                            <p class="card-text"><%= item.sanitizedBody %></p>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="alert alert-warning">No items available.</p>
                    <% } %>
                </section>
            </div>
        </div>

<%- include('partials/footer') %>

        <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </body>
</html>